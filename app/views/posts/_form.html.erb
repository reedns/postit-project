
<% if @post.errors.any? %>
  <div class="row">
    <div class="alert alert-error span6">
    <h5>There were some errors:</h5>
    <ul> 
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    </div>
  </div>
<% end %>

<div class="well">
  <%= form_for @post do |f| %>
    <div class="control-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="control-group">
      <%= f.label :url %>
      <%= f.text_field :url %>
    </div>
    <div class="control-group">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 7 %>
    </div>
    <%= f.submit(@post.new_record? ? "Create Post" : "Update Post", class: "btn btn-success")%>
  <% end %>
</div>
<%= render "shared/content_title", title: "Login" %>

<div class="well">
  <%= form_tag "/login" do %>
    <div class="control-group">
      <%= label_tag :user_name %>
      <%= text_field_tag :user_name, params[:user_name] || '' %>
    </div>
    <div class="control-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, params[:password] || '' %>
    </div>
      <%= submit_tag "Login", class: "btn btn-success" %>
  <% end %>
</div>
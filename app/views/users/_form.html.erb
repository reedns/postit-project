<%= render "shared/error", obj: @user %>

<div class="well">
  <%= form_for @user do |f| %>
    <div class="control-group">
      <%= f.label :user_name %>
      <%= f.text_field :user_name %>
    </div>
    <div class="control-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class= "control-group">
      <%= f.label :time_zone %>
      <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, default: Time.zone.name %>
    </div>
    <div class="control-group">
      <%= f.label :phone, "Phone Number (optional)" %> 
      <%= f.text_field :phone %>
      <%= link_to "#", id: "two_factor" do%>
        <i class= "icon-question-sign"></i>
      <% end %>
    </div>
      <%= f.submit @user.new_record? ? "Register" : "Update Profile", class: "btn btn-success"%>
  <% end %>
</div>